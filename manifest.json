{
  "manifest_version": 3,
  "name": "freee 勤怠管理 Plus Plus",
  "description": "freee勤怠の実働情報から詳細情報を計算します。",
  "version": "0.1.0",
  "icons": {
    "16": "images/icon16.jpeg",
    "32": "images/icon32.jpeg",
    "48": "images/icon48.jpeg",
    "128": "images/icon128.jpeg"
  },
  "content_scripts": [
    {
      "matches": ["https://kintaiplus.freee.co.jp/*"],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "freee 勤怠管理 Plus Plus"
  }
}
