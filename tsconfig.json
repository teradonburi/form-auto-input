{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["DOM", "ES2022"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "types": ["chrome", "react", "react-dom", "vitest"],
      "jsx": "react-jsx"
    },
    "include": ["src/**/*"]
  }